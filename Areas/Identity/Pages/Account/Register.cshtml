@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="cyberpunk-container container py-5">
    <div class="cyber-header">
        <h1 class="text-center glitch" data-text="Register">Register</h1>
        <div class="cyber-line"></div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 cyber-card p-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center cyber-text">Create a new account</h2>
                <hr class="cyber-line" />

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control cyber-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="cyber-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control cyber-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="cyber-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control cyber-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" class="cyber-label">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn cyber-button btn-primary w-100">
                    <span class="text-white">REGISTER</span>
                    <div class="cyber-button-border"></div>
                </button>
            </form>
        </div>
    </div>

    <div class="cyber-decoration top-right"></div>
    <div class="cyber-decoration bottom-left"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
