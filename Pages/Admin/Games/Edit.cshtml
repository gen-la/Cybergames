@page "{id:int}"
@model Cybergames.Pages.Admin.Games.EditModel
@{
ViewData["Title"] = "Edit Game";
}

<div class="cyberpunk-container container mt-5">
    <div class="cyber-header">
        <h1 class="display-5 glitch" data-text="Edit Game">Edit Game</h1>
        <div class="cyber-line"></div>
    </div>

    <form method="post" class="max-w-2xl">
        <input type="hidden" asp-for="Game.ID" />

        <div class="mb-4">
            <label asp-for="Game.Title" class="block text-white text-sm font-bold mb-2">Title</label>
            <input asp-for="Game.Title" class="form-control bg-dark text-white border border-secondary" />
            <span asp-validation-for="Game.Title" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Category" class="block text-white text-sm font-bold mb-2">Category</label>
            <select asp-for="Game.Category" asp-items="Model.CategoryOptions" class="form-control bg-dark text-white border border-secondary">
                <option value="">Select a category</option>
            </select>
            <span asp-validation-for="Game.Category" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Price" class="block text-white text-sm font-bold mb-2">Price</label>
            <input asp-for="Game.Price" type="number" step="0.01" class="form-control bg-dark text-white border border-secondary" />
            <span asp-validation-for="Game.Price" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Description" class="block text-white text-sm font-bold mb-2">Description</label>
            <textarea asp-for="Game.Description" class="form-control bg-dark text-white border border-secondary" rows="4"></textarea>
            <span asp-validation-for="Game.Description" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Cover" class="block text-white text-sm font-bold mb-2">Cover URL</label>
            <input asp-for="Game.Cover" class="form-control bg-dark text-white border border-secondary" />
            <span asp-validation-for="Game.Cover" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Img1" class="block text-white text-sm font-bold mb-2">Image 1 URL</label>
            <input asp-for="Game.Img1" class="form-control bg-dark text-white border border-secondary" />
            <span asp-validation-for="Game.Img1" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Img2" class="block text-white text-sm font-bold mb-2">Image 2 URL</label>
            <input asp-for="Game.Img2" class="form-control bg-dark text-white border border-secondary" />
            <span asp-validation-for="Game.Img2" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Img3" class="block text-white text-sm font-bold mb-2">Image 3 URL</label>
            <input asp-for="Game.Img3" class="form-control bg-dark text-white border border-secondary" />
            <span asp-validation-for="Game.Img3" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Img4" class="block text-white text-sm font-bold mb-2">Image 4 URL</label>
            <input asp-for="Game.Img4" class="form-control bg-dark text-white border border-secondary" />
            <span asp-validation-for="Game.Img4" class="text-danger text-xs"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Game.Img5" class="block text-white text-sm font-bold mb-2">Image 5 URL</label>
            <input asp-for="Game.Img5" class="form-control bg-dark text-white border border-secondary" />
            <span asp-validation-for="Game.Img5" class="text-danger text-xs"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="btn btn-primary">
                Save Changes
            </button>
            <a href="/Admin/Games" class="btn btn-secondary btn-danger">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
