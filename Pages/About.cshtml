@page
@model Cybergames.Pages.About
@{
ViewData["Title"] = "About Us";
}

<div class="cyberpunk-container container mt-5">
    <div class="cyber-header">
        <h1 class="display-5 glitch" data-text="About Us">About Us</h1>
        <div class="cyber-line"></div>
    </div>
    <p class="lead cyber-text">We are Cybergames â€“ your partner for the latest and greatest games!</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="cyber-card">
                <div class="cyber-card-header">
                    <h3>Our History</h3>
                </div>
                <div class="cyber-card-body">
                    <p>
                        Cybergames was founded in 2023 with the goal of providing gamers worldwide with a platform to discover, purchase, and enjoy the latest games.
                        We strive to create a seamless and enjoyable experience for all our users.
                    </p>
                    <div class="cyber-timeline">
                        <div class="cyber-timeline-item">
                            <div class="cyber-timeline-marker"></div>
                            <div class="cyber-timeline-content">
                                <h4>2023</h4>
                                <p>Founded in Stockholm</p>
                            </div>
                        </div>
                        <div class="cyber-timeline-item">
                            <div class="cyber-timeline-marker"></div>
                            <div class="cyber-timeline-content">
                                <h4>2024</h4>
                                <p>Expanded to 10,000+ games</p>
                            </div>
                        </div>
                        <div class="cyber-timeline-item">
                            <div class="cyber-timeline-marker"></div>
                            <div class="cyber-timeline-content">
                                <h4>2025</h4>
                                <p>Going global</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="cyber-image-container mb-4">
                <img src="~/images/cyber-team.jpg" alt="Cybergames Team" class="img-fluid cyber-image" onerror="this.src='https://via.placeholder.com/600x400/0a0a2a/00ffff?text=CYBERGAMES+TEAM'">
                <div class="cyber-image-overlay">
                    <div class="cyber-image-text">OUR TEAM</div>
                </div>
            </div>
            <div class="cyber-card">
                <div class="cyber-card-header">
                    <h3>Our Team</h3>
                </div>
                <div class="cyber-card-body">
                    <p>
                        Our team consists of passionate individuals with experience in both the gaming industry and the tech world.
                        Together, we work to make Cybergames the best place for gaming enthusiasts.
                    </p>
                    <div class="cyber-stats">
                        <div class="cyber-stat">
                            <div class="cyber-stat-number counter" data-target="25">0</div>
                            <div class="cyber-stat-label">Team Members</div>
                        </div>
                        <div class="cyber-stat">
                            <div class="cyber-stat-number counter" data-target="15">0</div>
                            <div class="cyber-stat-label">Countries</div>
                        </div>
                        <div class="cyber-stat">
                            <div class="cyber-stat-number counter" data-target="100">0</div>
                            <div class="cyber-stat-label">Game Partners</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="cyber-card">
            <div class="cyber-card-header">
                <h3>Our Mission</h3>
            </div>
            <div class="cyber-card-body">
                <p>
                    We believe in the power of games to create community, learning, and entertainment.
                    Our mission is to make games accessible to everyone and to support the development of innovative and engaging gaming experiences.
                </p>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="cyber-feature">
                            <i class="bi bi-controller cyber-icon-lg"></i>
                            <h4>Gaming For All</h4>
                            <p>Making games accessible to everyone regardless of platform or experience level.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="cyber-feature">
                            <i class="bi bi-people-fill cyber-icon-lg"></i>
                            <h4>Community First</h4>
                            <p>Building a strong community of gamers who share their passion and experiences.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="cyber-feature">
                            <i class="bi bi-lightning-charge-fill cyber-icon-lg"></i>
                            <h4>Innovation</h4>
                            <p>Supporting developers who push the boundaries of what games can be.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="cyber-decoration top-right"></div>
    <div class="cyber-decoration bottom-left"></div>
</div>

